@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password |";
}

<div class="login-brand">
    <img src="~/assets/img/logos/logo.jpeg" alt="logo" width="100" class="shadow-light rounded-circle">
</div>
<div class="card card-primary">
    <div class="card-header">
        <h4>Reset Password</h4>
    </div>
    <div class="card-body">
        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" autofocus>
                <span class="invalid-feedback" asp-validation-for="Email">
                </span>
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Password" class="d-block"></label>
                    <input asp-for="Password" autocomplete="new-password" aria-required="true" class="form-control pwstrength" data-indicator="pwindicator">
                    <div id="pwindicator" class="pwindicator">
                        <div class="bar"></div>
                        <div class="label"></div>
                    </div>
                </div>
                <div class="form-group col-12">
                    <label asp-for="ConfirmPassword" class="d-block"></label>
                    <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true">
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Reset</button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
